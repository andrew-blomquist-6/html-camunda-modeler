{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "outDir": "dist/",
        "lib": [
            "dom",
            "es2015", 
            "es2017"
        ]
    },
    "exclude": [
        "node_modules",
        "lib",
        "__tests__"
    ]
}